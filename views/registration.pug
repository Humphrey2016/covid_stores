title Register Agent
main.my-form
  .cotainer
    .row.justify-content-center
      .col-md-8
        .card
          .card-header REGISTER NEW SALES AGENT
          .card-body
            form(name='registration-form',onsubmit='return validation()', action='/manager/reg', method='POST')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='full_name') Full Name
                .col-md-6
                  input#full_name.form-control(type='text', name='fullname', required)
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='email_address') E-Mail Address
                .col-md-6
                  input#email_address.form-control(type='text', name='emailaddress')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='user_name') User Name
                .col-md-6
                  input#user_name.form-control(type='text', name='username', required)
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='password') Choose Password
                .col-md-6
                  input#user_name.form-control(type='password', placeholder='Password', name='password', required)                  
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='password') Re Enter Password
                .col-md-6
                  input#password.form-control(type='password', placeholder='Re Password', name='repassword', required)
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='permanent_address') Permanent Address
                .col-md-6
                  input#permanent_address.form-control(type='text', name='permanentaddress', required)
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='EMPnumber')
                  abbr(title='EMPLOYEE Id Card') Employee ID
                  |  Number
                .col-md-6
                  input#nid_number.form-control(type='text', name='EMPnumber', required)
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='NINnumber')
                  abbr(title='National Id Card') NID
                  |  Number
                .col-md-6
                  input#nid_number.form-control(type='text', name='NINnumber')
              .col-md-6.offset-md-4
                button.btn.btn-primary(type='submit').
                  
                  Register
                  
