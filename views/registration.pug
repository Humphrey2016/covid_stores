title Register Agent
main.my-form
  .cotainer
    .row.justify-content-center
      .col-md-8
        .card
          .card-header REGISTER NEW SALES AGENT
          .card-body
            form(name='registration-form', onsubmit='return validform()', action='register', method='POST')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='full_name') Full Name
                .col-md-6
                  input#full_name.form-control(type='text', name='full-name')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='email_address') E-Mail Address
                .col-md-6
                  input#email_address.form-control(type='text', name='email-address')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='user_name') User Name
                .col-md-6
                  input#user_name.form-control(type='text', name='username')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='phone_number') Phone Number
                .col-md-6
                  input#phone_number.form-control(type='text')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='present_address') Present Address
                .col-md-6
                  input#present_address.form-control(type='text')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='permanent_address') Permanent Address
                .col-md-6
                  input#permanent_address.form-control(type='text', name='permanent-address')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='nid_number')
                  abbr(title='National Id Card') NID
                  |  Number
                .col-md-6
                  input#nid_number.form-control(type='text', name='nid-number')
              .col-md-6.offset-md-4
                button.btn.btn-primary(type='submit').
                  
                  Register
                  
